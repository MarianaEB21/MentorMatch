<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gelo"
    android:padding="12dp"
    android:visibility="visible"
    tools:context=".Perfil">

    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Perfil"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="29dp"
        android:hint="Nome"
        android:text="Mariana Eiroz Borges"
        app:layout_constraintTop_toBottomOf="@id/txt_profile" />

    <TextView
        android:id="@+id/txt_dt_nascimento"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="11dp"
        android:hint="Data de nascimento"
        android:text="21/04/1995"
        app:layout_constraintTop_toBottomOf="@id/txt_nome" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:hint="Gênero"
        android:text="Feminino"
        app:layout_constraintTop_toBottomOf="@id/txt_dt_nascimento"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_options"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_gender">

        <ImageButton
            android:id="@+id/card_options_estudante_ico"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/estudante_ico" />

        <ImageButton
            android:id="@+id/card_options_profissional_ico"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/profissional_ico" />

        <ImageButton
            android:id="@+id/card_options_professor_ico"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/professor_ico" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_interesting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Meus assuntos de interesse"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_options" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_interesting"
        android:backgroundTint="@android:color/transparent"
        app:cardElevation="0dp">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco de dados"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engenharia de Software"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IA"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UX"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQL"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Javascript"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liderança"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scrum"
                app:closeIconEnabled="true"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvimento Ágil"
                app:closeIconEnabled="true"/>
        </com.google.android.material.chip.ChipGroup>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>