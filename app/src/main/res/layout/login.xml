<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gelo"
    android:padding="12dp"
    tools:context=".Login">

    <ImageView
        android:id="@+id/img_mentormatch"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:src="@drawable/mentormatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_subtitle_mentormatch"
        android:layout_width="311dp"
        android:layout_height="107dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:src="@drawable/img_subtitle_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mentormatch"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/img_input_login"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:src="@drawable/input_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_subtitle_mentormatch"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/img_input_password"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:src="@drawable/input_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_input_login"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txt_forgot_pass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Esqueceu a senha?"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_input_password" />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:layout_marginTop="62dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_input_password"
        android:contentDescription="BotÃ£o de login" />

    <ImageView
        android:id="@+id/img_social_medias"
        android:layout_width="188dp"
        android:layout_height="99dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:src="@drawable/social_icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:scaleType="fitCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>